
@{
    ViewBag.Title = "ExtraTime";
}

<div class="container-calendar">

    <h3 id="monthAndYear"></h3>

    <div class="button-container-calendar">
        <button id="previous" onclick="previous()">&#8249;</button>
        <button id="next" onclick="next()">&#8250;</button>
    </div>

    <table class="table-calendar" id="calendar" data-lang="en">
        <thead id="thead-month"></thead>
        <tbody id="calendar-body"></tbody>
    </table>

    <div class="footer-container-calendar">
        <label for="month">Nhảy tới: </label>
        <select id="month" onchange="jump()">
            <option value=0>Tháng 1</option>
            <option value=1>Tháng 2</option>
            <option value=2>Tháng 3</option>
            <option value=3>Tháng 4</option>
            <option value=4>Tháng 5</option>
            <option value=5>Tháng 6</option>
            <option value=6>Tháng 7</option>
            <option value=7>Tháng 8</option>
            <option value=8>Tháng 9</option>
            <option value=9>Tháng 10</option>
            <option value=10>Tháng 11</option>
            <option value=11>Tháng 12</option>
        </select>
        <select id="year" onchange="jump()"></select>
    </div>

</div>

<div class="modal fade" id="modal-register-extra-time" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" id="dialogmodal-register-extra-time">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Đăng kí tăng ca</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="d-flex justify-content-between row-emp">
                        <div>
                            <div class="d-flex justify-content-start">
                                <div class="label">
                                    <label>Từ</label>
                                </div>
                                <div>
                                    <input type="time" class="form-control" id="textbox-from-extra" aria-describedby="emailHelp">
                                </div>
                            </div>
                            <div>
                                <small id="warn-from-extra" class="form-text text-muted warn" error="false">Giờ không được để trống</small>
                            </div>
                        </div>
                        <div>
                            <div class="d-flex justify-content-start">
                                <div class="label">
                                    <label>Đến</label>
                                </div>
                                <div>
                                    <input type="time" class="form-control" id="textbox-to-extra" aria-describedby="emailHelp">
                                </div>
                            </div>
                            <div>
                                <small id="warn-to-extra" class="form-text text-muted warn" error="false">Giờ không được để trống</small>
                            </div>
                        </div>
                    </div>
                    @*<button type="submit" class="btn btn-primary">Lưu</button>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btn-save-extra-time">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Tools/ValidateInput.js"></script>
<script src="~/Scripts/Tools/ProccessDate.js"></script>
<script src="~/Scripts/Tools/GenRandom.js"></script>
<script src="~/Scripts/Tools/ProccessUrl.js"></script>
